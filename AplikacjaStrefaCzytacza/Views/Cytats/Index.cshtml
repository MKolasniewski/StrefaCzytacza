@model IEnumerable<AplikacjaStrefaCzytacza.Models.Cytat>

@{
    ViewBag.Title = "Index";
}

<h2></h2>

<p>
    @Html.ActionLink("Dodaj cytat", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Kategoria.NazwaKategorii)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.TekstCytatu)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.NazwaKsiazki)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.AutorCytatu)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Kategoria.NazwaKategorii)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.TekstCytatu)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.NazwaKsiazki)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.AutorCytatu)
        </td>
        <td>
            @Html.ActionLink("Edytuj", "Edit", new { id=item.Id }) |
            @Html.ActionLink("Szczegóły", "Details", new { id=item.Id }) |
            @Html.ActionLink("Usuń", "Delete", new { id=item.Id })
        </td>
    </tr>
}

</table>
